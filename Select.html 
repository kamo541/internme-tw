<body>

  <h2>Select Your Course</h2>

  <form onsubmit="saveCourse(event)">
    <select id="course" required>
      <option value="">-- Choose a course --</option>
    </select><br>
    <button type="submit">Next</button>
  </form>

  <button onclick="goBack()">Back</button>

  <!-- Load data.js which contains courseSectors -->
  <script src="data.js"></script>

  <script>
    const courseSelect = document.getElementById("course");

    // Load courses from data.js
    Object.keys(courseSectors).forEach(course => {
      const opt = document.createElement("option");
      opt.value = course;
      opt.textContent = course;
      courseSelect.appendChild(opt);
    });

    // Save course and go to next page
    function saveCourse(e) {
      e.preventDefault();
      localStorage.setItem("course", courseSelect.value);
      window.location.href = "select-province.html";
    }

    function goBack() {
      window.location.href = "duration.html";
    }
  </script>

</body>
