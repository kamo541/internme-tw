<body>

  <h2>Select Your Province</h2>

  <form onsubmit="saveProvince(event)">
    <select id="province" required>
      <option value="">-- Choose a province --</option>
    </select><br>
    <button type="submit">Next</button>
  </form>

  <button onclick="goBack()">Back</button>

  <script src="data.js"></script>

  <script>
    const provinceSelect = document.getElementById("province");

    // Load provinces from data.js
    Object.keys(provinceTowns).forEach(province => {
      const opt = document.createElement("option");
      opt.value = province;
      opt.textContent = province;
      provinceSelect.appendChild(opt);
    });

    function saveProvince(e) {
      e.preventDefault();
      localStorage.setItem("province", provinceSelect.value);
      window.location.href = "locations.html";
    }

    function goBack() {
      window.location.href = "select-course.html";
    }
  </script>

